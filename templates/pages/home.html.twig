{% extends 'base.html.twig' %}

{% block body %}

    <div class="jumbotron text-center">
        <h1>LebonFolder</h1>
        <p>lorem ipsum</p>
    </div>

    <div class="container">
        <h2>
            Les derniers biens
        </h2>
        <div class="row flex">
            {% for product in products %}
                <div class="col-3">
                    <div class="card" style="box-shadow: 10px 10px 10px grey;">
                        <div class="card-body">
                            <h3 class="card-title">
                                <a href="{{ path('product.show', {id: product.id, slug: product.slug}) }}">{{ product.title }}</a>
                            </h3>
                            <p class="card-text">{{ product.description }}</p>
                            <div class="text-danger" style="font-weight: bold; font-size: 3rem">{{ product.price }} â‚¬</div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}